<form>
    <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value=title placeholder="Task Name"}}
    </div>
    <div class="form-group">
        <label>Due Date</label>
        {{input type="text" class="form-control" value=date placeholder="Task Due Date"}}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{textarea class="form-control" value=description placeholder="Task Description"}}
    </div>
    <button class="btn btn-primary">Submit</button>    
</form>